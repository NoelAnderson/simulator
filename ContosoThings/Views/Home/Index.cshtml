@using System.Web.Optimization
@{
    ViewBag.Title = "Home";
}

<h2>Home</h2>

<div ng-app="mainApp" ng-controller="MainCtrl">
    <h3>Homes</h3>

    <div ng-if="homes">
        <div ng-repeat="home in homes">
            {{home.Name}} ({{home.Things.length}})

            <div>
                <div class="ct-thing" ng-repeat="thing in home.Things">
                    <div class="ct-thing-name">
                        {{thing.ThingsType}}: {{thing.Name}}
                    </div>
                    <div class="ct-action">
                        <div class="btn-group" data-toggle="buttons"  ng-if="thing.ThingsType === 0 || thing.ThingsType === 1 || thing.ThingsType === 2">
                            <label class="btn btn-default" ng-class="{active:!thing.Switch}" ng-click="switchOff(home.Id, thing);" >
                                <input type="radio" name="options" id="option1" autocomplete="off">Off
                            </label>
                            <label class="btn btn-default" ng-class="{active:thing.Switch}" ng-click="switchOn(home.Id, thing);">
                                <input type="radio" name="options" id="option2" autocomplete="off">On
                            </label>
                        </div>
                        <div ng-if="thing.ThingsType === 2">
                            <select ng-model="thing.Dim" ng-change="dim(home.Id, thing)">
                                <option ng-repeat="n in range(0, 100)">{{n}}</option>
                            </select>
                            <div class="text-xs-center" id="example-caption-2">{{thing.Dim}}%</div>
                            <progress class="progress" value="{{thing.Dim}}" max="100"></progress>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

@section Scripts{
    @Scripts.Render("~/bundles/app")
}